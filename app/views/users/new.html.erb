<div class="dark_background left_padding">
  <h2>Sign Up for RuPaul 2020 Campaign Updates</h1>

<div class="row">
  <div class="col-sm-4">

  <%= form_tag("/users", method: 'post') do  %>

    <div class="form-group">
      <%= label_tag :name, "Name:" %>
      <%= text_field_tag :name, "", autofocus: true, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= label_tag :email, "Email Address" %>
      <%= text_field_tag :email, "", class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= label_tag :password, "Set Your Password" %>
      <%= text_field_tag :password, "", class: 'form-control' %>
    </div>

    <%= submit_tag "Sign Me Up for RuPaul 2020 updates!", class: 'btn btn-success btn-lg'%>
    or
    <%= link_to "Cancel", root_url %>

  <% end %>

  </div>
</div>
</div>
